{% extends "Common/common.twig" %}
{% block style %}
	<link href="{{base_url('public/admin/css/ui-pagination.css')}}" rel="stylesheet">
{% endblock %}
{% block container %}
	<div class="bg">
		<div class="manage_head">
			<span class="manage_head_title">堂堂十三水充值系统</span>
			<span class="logout">你好，{{ userInfo.id }} <a href="{{ base_url('logout') }}">注销</a></span>
		</div>
		<div class="content">
			<div class="content-left">
				<div class="menus">
					<ul >
						<li><a href="{{ base_url('/') }}">玩家充值</a></li>
                        {% if userInfo.type == 0 %}
                            <li class="active"><a href="{{ base_url('proxy-manage') }}">代理商充值</a></li>
                        {% endif %}
						<li><a href="{{ base_url('account-manage') }}">账号管理</a></li>
					</ul>
				</div>
			</div>
			<div class="content-right">
				<div class="tabs">
					<ul class="clearfix" id="nav">
						<li class="active">钻石充值</li>
						<li>充值记录</li>
					</ul>
				</div>

				    <div id="menu_con">
				        <div class="tag" style="display:block">
				            <div class="input-group">
								{% if userInfo.type != 0 %}
									<span><label>当前拥有钻石数：{{ userInfo.diamond }}颗</label></span>
								{% endif %}
				            	<span><label>代理商ID：</label><input type="text" name="proxy_id" placeholder="请输入代理商ID" id="proxy_id"></span>
				            	<span><label>确认代理商ID：</label><input type="text" name="confirm_proxy_id" placeholder="确认代理商ID" id="confirm_proxy_id"></span>
				            	<span><label>充值钻石数：</label><input type="text" name="diamond" placeholder="请输入钻石数" id="diamond"></span>
            	                <button class="recharge">充 值</button>
                				<span class="message-tip">{{error_flashdata}}</span>
				            </div>
				        </div> 
				        <div class="tag" style="display:none">
							<div class="layui-form-pane" style="margin-top: 15px;margin-left: 115px;">
								<div class="layui-form-item">
									<label class="layui-form-label">范围选择</label>
									<div class="layui-input-inline">
										<input class="layui-input" placeholder="开始日" id="start">
									</div>
									<div class="layui-input-inline">
										<input class="layui-input" placeholder="截止日" id="end">
									</div>
									<div class="layui-input-inline">
										<button class="search">搜索</button>
									</div>

								</div>
							</div>

							<table  id="recharge_list" cellspacing="0" cellpadding="0">
								<thead>
								<tr>
									<th>序号</th>
									<th>充值代理商ID</th>
									<th>充值钻石数</th>
									<th>充值时间</th>
								</tr>
								</thead>

								<tbody>


								</tbody>
							</table>
                            <div class="diamond_total">期间累计充值钻石数为<span>0</span>颗</div>
							<div class="pager"></div>
				         </div> 
					</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block script %}
	<script src="{{base_url('public/admin/js/tc-pagination.js')}}"></script>
	<script type="text/javascript">


$(function(){
    layui.use(['laydate','layer'], function() {
        layer = layui.layer;
        var laydate = layui.laydate;

        var start = {
            istoday: true
            ,choose: function(datas){
                end.min = datas; //开始日选好后，重置结束日的最小日期
                end.start = datas //将结束日的初始值设定为开始日
            }
        };

        var end = {
            istoday: true
            ,choose: function(datas){
                start.max = datas; //结束日选好后，重置开始日的最大日期
            }
        };

        document.getElementById('start').onclick = function(){
            start.elem = this;
            laydate(start);
        }
        document.getElementById('end').onclick = function(){
            end.elem = this;
            laydate(end);
        }
        $('.recharge').click(function(){
            var proxy_id =  $("#proxy_id").val();
            var confirm_proxy_id =  $("#confirm_proxy_id").val();
            var diamond =  $("#diamond").val();
            console.log(diamond);
            $.ajax({
                type: 'POST',
                url: '/proxy-recharge',
                data: {proxy_id:proxy_id,confirm_proxy_id:confirm_proxy_id,diamond:diamond},
                dataType: "json",
                    beforeSend: function(){
                        var index = layer.load(0, {shade: false}); //0代表加载的风格，支持0-2
                     // Handle the beforeSend event
                    },
                    complete: function(){
                        layer.closeAll('loading');
                     // Handle the complete event
                    },
                    success: function(data){
                        console.log(data);
                        if(data.status == 0){
                            layer.msg('充值成功',{icon: 1});
                            location.reload()
                        }else{
                            layer.msg(data.msg,{icon: 2});
                        }
                    }
            });
        })

            var items = page();

            $('.pager').pagination({
                items: items,
                itemsOnPage: 5,
                // theme: 'simple-theme',
                onPageClick: function(pageNo, e) {
                    // console.log(pageNo, e)
                    var starttime = $('#start').val();
                    var endtime =  $('#end').val();
                    page(starttime,endtime,pageNo);

                }
            });


            $('.search').click(function(){
                var start = $('#start').val();
                var end =  $('#end').val();
                item = page(start,end);
                $('.pager').pagination({
                    items: item,
                    itemsOnPage: 5,
                    // theme: 'simple-theme',
                    onPageClick: function(pageNo, e) {
                        // console.log(pageNo, e)
                        var starttime = $('#start').val();
                        var endtime =  $('#end').val();
                        page(starttime,endtime,pageNo);

                    }
                });
                
            })

            function page(starttime,endtime,page){
                var item = 0;
                var starttime = arguments[0] ? arguments[0] : '';
                var endtime = arguments[1] ? arguments[1] : '';
                var page = arguments[2] ? arguments[2] : '1';
                $.ajax({
                    type: 'POST',
                    url: '/proxy-recharge-list/'+page,
                    data: {starttime:starttime,endtime:endtime},
                    async: false,
                    dataType: "json",
                        beforeSend: function(){
                            var index = layer.load(0, {shade: false}); //0代表加载的风格，支持0-2
                         // Handle the beforeSend event
                        },
                        complete: function(){
                            layer.closeAll('loading');
                         // Handle the complete event
                        },
                        success: function(data){
                            if(data.status == 0){
                                str = ''
                                $.each(data.data.list, function(index,val) {
                                    str += '<tr> <td>'+val.id+'</td> <td>'+val.proxy_id+'</td> <td style="color: #00CC00">+'+val.diamond+'</td> <td>'+val.create_time+'</td> </tr>';
                                });
                                $('#recharge_list tbody').html(str);

                                if(str ==''){
                                    layer.msg('没有更多数据',{icon: 2});
                                }

                                item = data.data.total;
                                $('.diamond_total span').html(data.data.total_diamond);
                            }
                        }
                });
                return item;
            }




    })



})

		function change(tab,content){
		var $tab =  $(tab);
		$tab.find("li").eq(0).addClass("active");
		$tab.find("li").on("click",function(){
		var index = $(this).index();
			$(this).addClass("active").siblings().removeClass("active");
			$(content).children("div").eq(index).show().siblings().hide();
		})
		}
		change("#nav","#menu_con");

	</script>

{% endblock %}

